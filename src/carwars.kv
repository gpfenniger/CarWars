#:kivy 1.0.9

<Button>:
    size: 300,75
    color: 0,1,0,1
    font_size: 40

<CarWars>:
    label_wid: my_custom_label
    Button:
        text:"Create a Record"
        pos: (root.width / 2) - 150, (root.height / 2) + 37.5
        on_press: root.do_action()
    Button:
        text:"Read a Record"
        pos: (root.width / 2) - 150, (root.height / 2) - 37.5
    Label:
        id: my_custom_label
        text: 'My label before button press'
        pos: (root.width / 2) - 150, root.height / 4